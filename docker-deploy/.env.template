# E-Maintenance System Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
DB_NAME=emaintenance
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_HOST=postgres
DB_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Application URLs (for internal Docker network)
# ============================================
# These are used by the web application to connect to backend services
# Replace YOUR_SERVER_IP with your actual server IP or domain
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP
NEXT_PUBLIC_USER_SERVICE_URL=http://YOUR_SERVER_IP/api/users
NEXT_PUBLIC_WORK_ORDER_SERVICE_URL=http://YOUR_SERVER_IP/api/work-orders
NEXT_PUBLIC_ASSET_SERVICE_URL=http://YOUR_SERVER_IP/api/assets

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://YOUR_SERVER_IP,https://YOUR_DOMAIN.com

# ============================================
# Port Configuration
# ============================================
HTTP_PORT=80
HTTPS_PORT=443

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================
# Node Environment
# ============================================
NODE_ENV=production

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@emaintenance.com

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
# 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000
# 24 hours in milliseconds

# ============================================
# Monitoring Configuration (Optional)
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
# Daily at 2 AM