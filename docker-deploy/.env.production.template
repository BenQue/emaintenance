# Redis Configuration
REDIS_URL=redis://redis:6379

# Local Docker Registry Configuration
LOCAL_REGISTRY=10.163.144.13:5000

# Health Check URLs
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3