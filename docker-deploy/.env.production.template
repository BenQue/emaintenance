# E-Maintenance Production Environment Configuration Template
# Server: 10.163.144.13
# Local Docker Registry: 10.163.144.13:5000

# IMPORTANT: Copy this file to .env.production and update with actual values
# DO NOT commit .env.production to version control

# Database Configuration
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DATABASE_URL=postgresql://postgres:CHANGE_ME_TO_SECURE_PASSWORD@database:5432/emaintenance

# JWT Configuration (Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_TO_SECURE_JWT_SECRET

# Frontend URLs (adjust for your server IP)
FRONTEND_URL=http://10.163.144.13
NEXT_PUBLIC_API_URL=http://10.163.144.13
NEXT_PUBLIC_USER_SERVICE_URL=http://10.163.144.13:3001
NEXT_PUBLIC_WORK_ORDER_SERVICE_URL=http://10.163.144.13:3002
NEXT_PUBLIC_ASSET_SERVICE_URL=http://10.163.144.13:3003

# Compose Project Name
COMPOSE_PROJECT_NAME=emaintenance-prod

# Docker Image Tags
IMAGE_TAG=latest

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Settings
NODE_OPTIONS=--max_old_space_size=512

# Security Settings
SECURE_COOKIES=false
CORS_CREDENTIALS=true

# File Upload Settings
MAX_FILE_SIZE=10485760
