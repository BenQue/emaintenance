# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_change_me
DATABASE_URL="postgresql://postgres:your_secure_database_password_change_me@postgres:5432/emaintenance"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-minimum-32-characters"

# Redis Configuration
REDIS_URL="redis://redis:6379"

# Environment
NODE_ENV=production

# API URLs (for Next.js frontend - external access)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:3001
NEXT_PUBLIC_WORK_ORDER_SERVICE_URL=http://localhost:3002
NEXT_PUBLIC_ASSET_SERVICE_URL=http://localhost:3003

# Service Ports
USER_SERVICE_PORT=3001
WORK_ORDER_SERVICE_PORT=3002
ASSET_SERVICE_PORT=3003
WEB_PORT=3000

# Internal Service URLs (for container-to-container communication)
USER_SERVICE_URL=http://user-service:3001
WORK_ORDER_SERVICE_URL=http://work-order-service:3002
ASSET_SERVICE_URL=http://asset-service:3003

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:80"

# File Upload
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# Email (for notifications - optional)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"